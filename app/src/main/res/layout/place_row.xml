<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="84dp"
    android:orientation="vertical"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp"
    android:id="@+id/place_cardview"
    android:onClick="OnRowClick">

    <RelativeLayout
        android:id="@+id/relativelayout_place"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:onClick="OnRowClick">

        <ImageView
            android:id="@+id/place_background"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:background="@color/accentColor"
            android:scaleType="centerCrop"
            android:onClick="OnRowClick" />

        <ImageView
            android:id="@+id/place_icon"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:gravity="center_vertical"
            android:scaleType="centerInside"
            android:src="@drawable/ic_gasstation"
            android:onClick="OnRowClick" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/place_icon"
            android:background="#fff"
            android:gravity="center_vertical"
            android:onClick="OnRowClick">

            <TextView
                android:id="@+id/place_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_toEndOf="@+id/catgr_icon"
                android:gravity="center_vertical"
                android:text="Name"
                android:textColor="#000"
                android:textSize="20dp"
                android:onClick="OnRowClick" />

            <TextView
                android:id="@+id/place_address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/place_name"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="Los Angles"
                android:textColor="#000"
                android:textSize="15dp"
                android:onClick="OnRowClick" />

            <TextView
                android:id="@+id/place_distance"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/place_address"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="0.2 km"
                android:textColor="#000"
                android:textSize="15dp"
                android:onClick="OnRowClick" />

        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>